@{
    ViewData["Title"] = "Detalle de notificación";
}
@section VendorStyles {
    <link rel="stylesheet" href="~/vendor/libs/apex-charts/apex-charts.css" />
    <link rel="stylesheet" href="~/vendor/libs/bootstrap/bootstrap.min.css" />
}
@section VendorScripts {
    <script src="~/vendor/libs/apex-charts/apexcharts.js"></script>
    <script src="~/vendor/libs/bootstrap/bootstrap.bundle.min.js"></script>
}
@section PageScripts {
    <script src="~/js/GestionFinanciera.js"></script>
}
<div class="container-xxl flex-grow-1 container-p-y">
    <div class="row">
        <div class="col-12">
            <h4 class="fw-bold py-3 mb-4">Detalle de notificación</h4>
        </div>
    </div>

    <!-- Detalle del cambio -->
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Detalle del cambio no contemplado</h5>

                    <!-- Incremento de presupuesto sin autorización -->
                    <div id="detalle-incremento" class="detalle-notificacion d-none">
                        <p><strong>Descripción:</strong> Incremento de presupuesto sin autorización</p>
                        <p><strong>Departamento:</strong> Recursos Humanos</p>
                        <p><strong>Monto:</strong> $2,500</p>
                        <p><strong>Fecha:</strong> 05/12/2024</p>
                        <p><strong>Detalles Adicionales:</strong> Este cambio fue detectado en la revisión mensual del presupuesto.</p>
                    </div>

                    <!-- Cambio de partida presupuestal -->
                    <div id="detalle-cambio-partida" class="detalle-notificacion d-none">
                        <p><strong>Descripción:</strong> Cambio de partida presupuestal</p>
                        <p><strong>Departamento:</strong> Marketing</p>
                        <p><strong>Monto:</strong> $1,200</p>
                        <p><strong>Fecha:</strong> 03/12/2024</p>
                        <p><strong>Detalles Adicionales:</strong> Este cambio fue realizado debido a un ajuste en las estrategias de campaña publicitaria.</p>
                    </div>

                    <div class="d-flex justify-content-end">
                        <a href="/Financiero/Index" class="btn btn-secondary">Regresar</a>
                        <button class="btn btn-success ms-2">Marcar como leído</button>
                        <button class="btn btn-danger ms-2">Ignorar</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    // Leer el parámetro 'id' de la URL
    const urlParams = new URLSearchParams(window.location.search);
    const id = urlParams.get('id');

    // Mostrar el detalle correspondiente
    if (id === "1") {
        document.getElementById("detalle-incremento").classList.remove("d-none");
    } else if (id === "2") {
        document.getElementById("detalle-cambio-partida").classList.remove("d-none");
    }
</script>
