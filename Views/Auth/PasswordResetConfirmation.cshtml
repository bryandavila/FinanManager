@{
    Layout = "_BlankLayout"; // Usa el mismo layout que tu login para mantener la consistencia
    ViewData["Title"] = "Contraseña Restablecida";
}

<div class="container-xxl">
    <div class="authentication-wrapper authentication-basic container-p-y">
        <div class="authentication-inner">
            <div class="card px-sm-6 px-0">
                <div class="card-body">
                    <div class="logo-container" style="text-align: center; padding: 20px 0;">
                        <img src="/img/Logo/logo.jpg" alt="Logo" style="width: 125px;">
                    </div>
                    <div class="text-center">
                    <h4 class="mb-1">¡Contraseña restablecida con éxito! ✅</h4>
                    <p class="mb-6">Tu contraseña ha sido actualizada correctamente.</p>
                    </div>
                    <!-- Botón para redirigir al login -->
                    <div class="text-center">
                        <a href="@Url.Action("LoginBasic", "Auth")" class="btn btn-primary">
                            OK
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
