@using FinanManager.Models
@model AuditoriasViewModel

@{
    ViewData["Title"] = "Historial de Auditorías";
}

@section VendorStyles {
    <link rel="stylesheet" href="~/vendor/libs/apex-charts/apex-charts.css" />
}

@section VendorScripts {
    <script src="~/vendor/libs/apex-charts/apexcharts.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
}

@section PageScripts {
    <script src="~/js/GestionUsuarios.js"></script>
}

<!-- Script de inactividad -->
<script src="~/js/inactivityTimer.js"></script>

<div class="container-xxl flex-grow-1 container-p-y">
    <div class="row">
        <div class="col-12">
            <h4 class="fw-bold py-3 mb-4">Historial de Auditorías</h4>
        </div>
    </div>

    <!-- Historial de Restablecimientos de Contraseña -->
    <div class="row">
        <div class="col-12 mb-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Restablecimientos de Contraseña</h5>
                    <p class="card-text">Lista de solicitudes de restablecimiento de contraseña.</p>
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>Correo Electrónico</th>
                                <th>Fecha de Creación</th>
                                <th>Responsable</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var solicitud in Model.Restablecimientos)

                            {
                                <tr>
                                    <td>@solicitud.Id</td>
                                    <td>@solicitud.Email</td>
                                    <td>@(solicitud.CreatedDate.ToString("dd/MM/yyyy HH:mm") ?? "N/A")</td>
                                    <td>@solicitud.Responsable</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <!-- Historial de Cambios de Roles -->
    <div class="row">
        <div class="col-12 mb-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Cambios de Roles</h5>
                    <p class="card-text">Lista de cambios de roles realizados por los administradores.</p>
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>Correo Electrónico</th>
                                <th>Rol Anterior</th>
                                <th>Nuevo Rol</th>
                                <th>Fecha</th>
                                <th>Responsable</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var cambio in Model.CambiosDeRoles)

                            {
                                <tr>
                                    <td>@cambio.Email</td>
                                    <td>@cambio.RolAnterior</td>
                                    <td>@cambio.NuevoRol</td>
                                    <td>@cambio.FechaCambio.ToString("dd/MM/yyyy HH:mm")</td>
                                    <td>@cambio.Responsable</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
